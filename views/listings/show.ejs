<% layout("/layouts/boilerplate") -%>

<body>
  <div class="row">
    <div class="col-md-8 col offset-md-2 p-4">
      <h3 class="my-3">Listing Details:</h3>

      <div class="card">
        <div class="row mb-3">
          <div class="col col-lg-10 offset-lg-1">
            <img
              src="<%= listing.image.url %>"
              class="card-img-top show-img"
              alt="listing_image"
            />
          </div>
        </div>

        <div class="card-body mb-3">
          <h6 class="card-title">
            Owned by <i><%= listing.owner.username %></i>
          </h6>
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text"><i><%= listing.description %></i></p>
        </div>

        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            &#2547; <%= listing.price.toLocaleString("en-BD") %> / night
          </li>
          <li class="list-group-item"><%= listing.location %></li>
          <li class="list-group-item"><%= listing.country %></li>
        </ul>

        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="card-body d-flex mt-2">
          <a
            href="/listings/<%= listing._id %>/edit"
            class="card-link btn btn-primary me-2 px-4"
            >Edit</a
          >

          <form
            method="POST"
            action="/listings/<%= listing._id %>?_method=DELETE"
          >
            <button class="btn btn-danger px-4">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>

    <!-- create reviews -->
    <div class="col-md-8 col-12 offset-md-2 p-4">
      <hr />
      <% if(currUser) { %>
      <h4>Leave a review</h4>
      <form
        action="/listings/<%= listing._id %>/reviews"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <div class="my-3">
          <label for="rating" class="form-label">Rating:</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="rating"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />

            <input type="radio" id="rate1" name="review[rating]" value="1" />
            <label for="rate1">1 star.</label>

            <input type="radio" id="rate2" name="review[rating]" value="2" />
            <label for="rate2">2 stars.</label>

            <input type="radio" id="rate3" name="review[rating]" value="3" />
            <label for="rate3">3 stars.</label>

            <input type="radio" id="rate4" name="review[rating]" value="4" />
            <label for="rate4">4 stars.</label>

            <input type="radio" id="rate5" name="review[rating]" value="5" />
            <label for="rate5">5 stars.</label>

            <span class="starability-focus-ring"></span>
          </fieldset>
        </div>

        <div class="my-3">
          <label for="comment" class="form-label">Comment:</label>
          <textarea
            name="review[comment]"
            id="comment"
            class="form-control"
            placeholder="Your comment here.."
            required
          ></textarea>
          <div class="invalid-feedback">Please add a comment!</div>
          <div class="valid-feedback">Comment looks good!</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr />
      <% } %>

      <h4 class="mb-3">All Reviews</h4>

      <div class="row">
        <% for(review of listing.reviews) { %>
        <div class="card review-card col-5 ms-4">
          <p class="card-text"><i>@<%= review.author.username %>:</i></p>
          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          ></p>
          <h6 class="card-title"><%= review.comment %></h6>
          <form
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            method="POST"
            class="mt-2 mb-1"
          >
          
          <% if(currUser && currUser._id.equals(review.author._id)) { %>
            <button class="btn btn-sm btn-dark">Delete</button>
          <% } %>

          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
